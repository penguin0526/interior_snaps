<div class="container-md">
  <div class="row">
    <div class="form-body p-4">
      <%= form_with model: post, local: true do |f| %>
        <div class="mb-4">
          <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
        </div>
        <div class="mb-4">
          <%= f.file_field :images, accept: "image/*", multiple: true, class: 'form-control' %>
        </div>
        <div class="mb-4">
          <label>タグ(,で区切ると複数タグ登録できます)</label>
          <%= f.text_field :name, value: @tag_list, class: "form-control" %>
        </div>
        <div class="mb-4">
          <%= f.text_area :body, :size=>"50x5", class: "form-control", placeholder: "コメントを入力してください" %>
        </div>
        <div class="col-auto">
          <% if post.new_record? %>
            <%= f.submit '新規作成', class: "btn btn-success mt-4" %>
          <% else %>
            <%= f.submit '更新する', class: "btn btn-success mt-4" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>