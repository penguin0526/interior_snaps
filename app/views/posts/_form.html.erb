<% if @post.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class="form-body p-4">
    <%= form_with model: post, local: true do |f| %>
      <div class="mb-4">
        <label>タイトル</label>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
      </div>
      <div class="mb-4">
        <label>画像(CTRLを押しながらクリックすると複数枚投稿できます)</label>
        <%= f.file_field :images, accept: "image/*", multiple: true, class: 'form-control' %>
      </div>
      <div class="mb-4">
        <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :name, value: @post.name, class: "form-control" %>
      </div>
      <div class="mb-4">
        <label>コメント</label>
        <%= f.text_area :body, :size=>"50x5", class: "form-control", placeholder: "コメントを入力してください" %>
      </div>
      <div>
        <% if post.new_record? %>
          <%= f.submit '新規作成', class: "btn btn-success d-grid gap-2 col-4 mx-auto" %>
        <% else %>
          <%= f.submit '更新する', class: "btn btn-success d-grid gap-2 col-4 mx-auto" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-grid gap-2 col-2 mx-auto">
    <% if post.new_record? %>
      <%= link_to "戻る", root_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to "戻る", post_path(post), class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>