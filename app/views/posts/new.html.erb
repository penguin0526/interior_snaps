<div class="container-md">
  <div class="row">
    <div class="form-body p-4">
      <%= form_with model: @post do |f| %>
        <div class="mb-4">
          <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
        </div>
        <div class="mb-4">
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        </div>
        <div class="mb-4">
          <%= f.text_area :body, :size=>"50x5", class: "form-control", placeholder: "コメントを入力してください" %>
        </div>
        <div class="col-auto">
          <%= f.submit "投稿", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>