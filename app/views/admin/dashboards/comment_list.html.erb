<div class="container mt-5">
  <h3>レビューコメント一覧</h3>
  <table class="table mt-3">
    <tr>
      <th class="col-2">名前</th>
      <th class="col-8">コメント</th>
      <th class="col-1"></th>
      <th class="col-1"></th>
    </tr>
  <% @comments.each do |comment| %>
    <tr>
      <td class="col-2"><%= @users.find(comment.user_id).name %></td>
      <td class="col-8"><%= comment.comment %></td>
      <td class="col-1"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
      <td class="col-1">
      <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<div class="d-grid gap-2 col-2 mx-auto">
  <%= paginate @comments, theme: 'bootstrap-5' %>
</div>